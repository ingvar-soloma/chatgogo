FROM golang:1.25.3-alpine3.22 AS builder

WORKDIR /app

# Встановлюємо залежності
RUN apk add --no-cache git curl bash build-base && \
    go install github.com/air-verse/air@latest

# Додаємо /go/bin у PATH
ENV PATH="/go/bin:${PATH}"

COPY go.mod go.sum ./
RUN go mod download

COPY . .

CMD ["air", "-c", ".air.toml"]
